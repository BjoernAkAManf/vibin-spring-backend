<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{72} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Things that are probably never going to ever be relevant for logs. -->
    <logger name="org.apache.tomcat.util.net.NioEndpoint" level="INFO"/>
    <logger name="sun" level="INFO"/>
    <logger name="jdk" level="INFO"/>
    <logger name="javax.management" level="INFO"/>
    <logger name="java.io.serialization" level="INFO"/>
    <logger name="_org.springframework" level="INFO"/>

    <!-- Might potentially add addition information (?) -->
    <logger name="org.apache.http" level="INFO"/>
    <logger name="org.apache.tomcat" level="INFO"/>
    <logger name="org.apache.catalina" level="INFO"/>
    <logger name="org.apache.coyote" level="INFO"/>
    <logger name="org.jboss" level="INFO"/>
    <logger name="org.testcontainers" level="INFO"/>
    <logger name="org.springframework" level="INFO"/>
    <logger name="com.github.dockerjava" level="INFO"/>
    <logger name="org.mybatis" level="INFO"/>
    <logger name="org.flywaydb" level="INFO"/>
    <logger name="com.zaxxer" level="INFO"/>
    <logger name="org.keycloak" level="INFO"/>

    <root level="TRACE">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>