<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.vibinofficial.backend.impl.FriendServiceImpl">
    <select id="findFriendsOf" resultType="java.util.UUID">
        SELECT friend
        FROM friends
        WHERE user = #{id};
    </select>

    <insert id="sendFriendRequest">
        INSERT INTO friend_requests (user, friend)
        VALUES (#{user}, #{friend});
    </insert>

    <insert id="insertFriendRelationshipImpl">
        INSERT INTO friends_raw (user, friend) VALUES (#{user}, #{friend})
    </insert>

    <delete id="deleteFriendRequest">
        DELETE
        FROM friend_requests
        WHERE user = #{requester}
          and friend = #{friend}
        LIMIT 1;
    </delete>

    <delete id="deleteFriendshipImpl">
        DELETE
        FROM friends_raw
        WHERE user = #{user}
          and friend = #{friend}
        LIMIT 1;
    </delete>
</mapper>
